#########################################################################
# Temporary aliases useful for demos, other current projects
#########################################################################
export MYTEMP=~/tmp
export MYCODE=~/src
export MYDOWNLOADS=~/Downloads
export MYDOCUMENTS=~/Documents
export MYDEVAPPS=/Applications/dev
export BREW_HOME=/usr/local/Cellar


#########################################################################
# Tool paths
export JAVA_HOME=$(/usr/libexec/java_home)
export SCALA_HOME=$BREW_HOME/scala/2.10.3
export ACTIVEMQ_HOME=$BREW_HOME/activemq/5.9.0/libexec
export M2_HOME=$BREW_HOME/maven/3.2.1/libexec
export M2=$M2_HOME/bin
export JREBEL_HOME=$MYDEVAPPS/jrebel
export GIT_HOME=$BREW_HOME/git/1.9.0/libexec

export SVN_EDITOR=subl


##########################################################################
# Tool opts
export JREBEL_OPTS="-javaagent:$JREBEL_HOME/jrebel.jar -Drebel.log.file=/Users/anders/.jrebel/jrebel.log -Drebel.properties=/Users/anders/.jrebel/jrebel.properties -Drebel.spring_plugin=true -Xrunjdwp:transport=dt_socket,address=8001,server=y,suspend=n -Drebel.debugger_integration=true -Drebel.notification.url=http://127.0.0.1:59378/jrebel/notifications"

export MAVEN_OPTS="-Xms512m -Xmx1024m -XX:PermSize=256m -XX:MaxPermSize=512m -XX:+CMSClassUnloadingEnabled -XX:+UseCompressedOops -Djava.awt.headless=true"
