#########################################################################
# Temporary aliases useful for demos, other current projects
#########################################################################
export MYTEMP=~/tmp
export MYCODE=~/src
export MYDOWNLOADS=~/Downloads
export MYDOCUMENTS=~/Documents
export MYDEVAPPS=/Applications/dev


#########################################################################
# Tool paths
export GRADLE_HOME=$MYDEVAPPS/gradle
export JAVA_HOME=$(/usr/libexec/java_home)
export ANDROID_HOME=$MYDEVAPPS/android-sdk-mac_86
export GROOVY_HOME=$MYDEVAPPS/groovy
export GRAILS_HOME=$MYDEVAPPS/grails
export GLU_HOME=$MYDEVAPPS/glu
export ZOOKEEPER_HOME=$MYDEVAPPS/zookeeper
export TOMCAT_HOME=$MYDEVAPPS/tomcat
export SCALA_HOME=$MYDEVAPPS/scala
export PLAY_HOME=$MYDEVAPPS/play
export CASSANDRA_HOME=$MYDEVAPPS/cassandra
export MONGODB_HOME=$MYDEVAPPS/mongodb
export SBT_HOME=$MYDEVAPPS/sbt
export ACTIVEMQ_HOME=$MYDEVAPPS/activemq
export MAVEN_HOME=/usr/share/maven
export DERBY_HOME=/$MYDEVAPPS/derby
export JREBEL_HOME=$MYDEVAPPS/jrebel
export JETTY_HOME=$MYDEVAPPS/jetty
export BEES_HOME=$MYDEVAPPS/cloudbees-sdk-1.3.1
export GIT_HOME=/usr/local/git

export SVN_EDITOR=vim


##########################################################################
# Tool opts
export JREBEL_OPTS="-javaagent:$JREBEL_HOME/jrebel.jar -Drebel.log.file=/Users/anders/.jrebel/jrebel.log -Drebel.properties=/Users/anders/.jrebel/jrebel.properties -Drebel.spring_plugin=true -Xrunjdwp:transport=dt_socket,address=8001,server=y,suspend=n -Drebel.debugger_integration=true -Drebel.notification.url=http://127.0.0.1:59378/jrebel/notifications"

export MAVEN_OPTS="-Xms512m -Xmx1024m -XX:PermSize=256m -XX:MaxPermSize=512m -XX:+CMSClassUnloadingEnabled -XX:+UseCompressedOops -Djava.awt.headless=true"
